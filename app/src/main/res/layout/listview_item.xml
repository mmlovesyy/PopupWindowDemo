<?xml version="1.0" encoding="utf-8"?>
<main.zhaizu.com.popupwindowdemo.ui.ItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dip">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:src="@drawable/user_icon" />

    <View
        android:layout_width="8dip"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textColor="#333333" />

            <ImageButton
                android:id="@+id/more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/comment"
                android:focusable="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/created_at"
            android:background="@color/colorCommentLayoutBg"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone"></LinearLayout>
    </LinearLayout>
</main.zhaizu.com.popupwindowdemo.ui.ItemView>
